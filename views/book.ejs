            <input class="time_to" type="time" name="end" />
          </div>
        </div>
        <input
          type="text"
          id="purpose"
          placeholder="Purpose..."
          name="purpose"
        />
        <select class="classrooms_option" name="Classrooms">
          <option disabled selected>Classrooms</option>
          <option value="C101">C102 - 80 Seater (20 benches)</option>
          <option value="C102">C103 - 80 Seater (20 benches)</option>
          <option value="C104">C104 - 80 Seater (20 benches)</option>
          <option value="L105">L105 - Hardware Lab (10 Setup)</option>
          <option value="L106">L106 - Computer Lab (40 Systems)</option>
          <option value="L107">L107 - Computer Lab (40 Sysytems)</option>
        </select>
        <button class="request" type="submit">Request</button>
      </div>
    </form>

    <form action="/book" method="post">
      <div id="magic4" class="floor_div f3">
        <div class="name">
          <p class="first_title">First</p>
          <p class="second_title">Floor</p>
        </div>
        <div class="datediv">
          <p class="Date">Date</p>
          <input id="date" type="date" name="date" />
        </div>
        <div class="timeform">
          <div class="timing">
            <label class="from">From :</label>
            <input class="time_from" type="time" name="start" />
            <label class="to">To :</label>
            <input class="time_to" type="time" name="end" />
          </div>
        </div>
        <input
          type="text"
          id="purpose"
          placeholder="Purpose..."
          name="purpose"
        />
        <select class="classrooms_option" name="Classrooms">
          <option disabled selected>Classrooms</option>
          <option value="C202">C202 - 80 Seater (20 benches)</option>
          <option value="C203">C203 - 80 Seater (24 benches)</option>
          <option value="C204">C204 - 80 Seater (20 benches)</option>
          <option value="C205">C205 - 80 Seater (24 benches)</option>
          <option value="L207">L207 - Computer Lab (36 Systems)</option>
        </select>
        <button class="request" type="submit">Request</button>
      </div>
    </form>

    <form action="/book" method="post">
      <div id="magic5" class="floor_div f4">
        <div class="name">
          <p class="first_title">Second</p>
          <p class="second_title">Floor</p>
        </div>
        <div class="datediv">
          <p class="Date">Date</p>
          <input id="date" type="date" name="date" />
        </div>
        <div class="timeform">
          <div class="timing">
            <label class="from">From :</label>
            <input class="time_from" type="time" name="start" />
            <label class="to">To :</label>
            <input class="time_to" type="time" name="end" />
          </div>
        </div>
        <input
          type="text"
          id="purpose"
          placeholder="Purpose..."
          name="purpose"
        />
        <select class="classrooms_option" name="Classrooms">
          <option disabled selected>Classrooms</option>
          <option value="C302">C302 - 80 Seater (20benches)</option>
          <option value="C303">C303 - 80 Seater (20benches)</option>
          <option value="C304">C304 - 80 Seater (20benches)</option>
          <option value="C305">C305 - 80 Seater (20benches)</option>
        </select>
        <button class="request" type="submit">Request</button>
      </div>
    </form>
    <script>
      function Lower() {
        document.getElementById('magic2').style.zIndex = 1
        document.getElementById('magic').style.zIndex = -1
        document.getElementById('magic3').style.zIndex = -1
        document.getElementById('magic4').style.zIndex = -1
        document.getElementById('magic5').style.zIndex = -1
        document.getElementById('magic2').style.opacity = '1'
        document.getElementById('magic').style.opacity = '0'
        document.getElementById('magic3').style.opacity = '0'
        document.getElementById('magic4').style.opacity = '0'
        document.getElementById('magic5').style.opacity = '0'
      }
      function Lower2() {
        document.getElementById('magic2').style.zIndex = -1
        document.getElementById('magic').style.zIndex = -1
        document.getElementById('magic3').style.zIndex = 1
        document.getElementById('magic4').style.zIndex = -1
        document.getElementById('magic5').style.zIndex = -1
        document.getElementById('magic2').style.opacity = '0'
        document.getElementById('magic').style.opacity = '0'
        document.getElementById('magic3').style.opacity = '1'
        document.getElementById('magic4').style.opacity = '0'
        document.getElementById('magic5').style.opacity = '0'
      }
      function Lower3() {
        document.getElementById('magic2').style.zIndex = -1
        document.getElementById('magic').style.zIndex = -1
        document.getElementById('magic3').style.zIndex = -1
        document.getElementById('magic4').style.zIndex = 1
        document.getElementById('magic5').style.zIndex = -1
        document.getElementById('magic2').style.opacity = '0'
        document.getElementById('magic').style.opacity = '0'
        document.getElementById('magic3').style.opacity = '0'
        document.getElementById('magic4').style.opacity = '1'
        document.getElementById('magic5').style.opacity = '0'
      }
      function Lower4() {
        document.getElementById('magic2').style.zIndex = -1
        document.getElementById('magic').style.zIndex = -1
        document.getElementById('magic3').style.zIndex = -1
        document.getElementById('magic4').style.zIndex = -1
        document.getElementById('magic5').style.zIndex = 1
        document.getElementById('magic2').style.opacity = '0'
        document.getElementById('magic').style.opacity = '0'
        document.getElementById('magic3').style.opacity = '0'
        document.getElementById('magic4').style.opacity = '0'
        document.getElementById('magic5').style.opacity = '1'
      }
    </script>
  </body>
</html>
