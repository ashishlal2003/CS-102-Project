<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lets do it!</title>
    <style>
@import url('https://fonts.googleapis.com/css2?family=Baloo+Bhai+2&family=Kanit:wght@500&family=Merriweather:wght@300&family=Satisfy&family=Source+Sans+Pro&display=swap');
*{
    padding:0px;
    margin:0px;
    background-color: white;
}
.header{
    display:grid;
    grid-template-columns: 2% 20% 38% 30% 10%;
}
.img img{
    width:190px;
}
.options ul li{
    display:inline;
    position:relative;
    font-weight: bolder;
    font-size: 17px;
    margin:15px;
}
.options{
    display:flex;
    justify-content:center;
    align-items:center;
}
.logout{
    padding-top: 21px;
    
}
.logout a{
    text-decoration:none;
    color:white;
    height:20px;
    padding:10px;
    background-color: blue;
    width:100px;
    font-weight: bolder;
    border-radius:20px;
}
.logout a:hover{
    background-color: darkblue;
}
.options ul li:hover{
    color:blue;
    cursor: pointer;
    transform: scale(1.5);
}

    </style>
    <style>
        main{
            padding: 25px 15px;
            background-color: #1ca3a4;
            
        }

        .title{
            background-color: transparent;
            color: white;
            font-weight: 600;
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            font-size: 35px;
            padding-left:60px
        }
        table{
            margin: 30px 0;
            width: 90%;
            text-align: center;
            margin-inline: auto;
        }
        table thead th
        {
            background-color: #2d9b9b;
            color: white;
            padding: 10px 15px;
            font-family: 'Courier New', Courier, monospace;
        }

        table tbody td{
            background-color: #b5dada;
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            padding: 10px 7px;
        }

        .button {
            cursor: pointer;
            padding: 8px 12px;
            background-color: rgba(204, 204, 60, 0.731);
            color: white;
            border: 0;
            border-radius: 20px;
        }
        .button:active{
            transform: scale(0.97);
        }
        .button:hover{
            transform: scale(1.03);
        }
         .approve{
            background-color: rgb(131, 164, 82);
        }
          .reject{
            background-color: rgb(174, 67, 67);
        }
        td div{
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: transparent;
        }
        form{
            background-color: transparent;
        }
    </style>
</head>
<body>

    <header class="header">
        <div>
        </div>
        <div class="img">
            <a href="https://www.iiitdwd.ac.in"><img src="./logo.png" alt=""></a>
        </div>
        <div>
        </div>
        <div class="options">
            
        </div>
        <div>
            <div class="logout">
                <a href="/login">Sign Out</a>
            </div>
        </div>
    </header>
    <main>
        <div class="title">
        Pending Requests
    </div>
    <table border="0" cellspacing="0" cellpadding="0">
        <thead>
            <th>Name</th>
            <th>Email</th>
            <th>Room</th>
            <th>Date</th>
            <th>Timings</th>
            <th>Purpose</th>
            <th>Actions</th>
        </thead>
        <tbody>
            
            <% for (var i =0; i < requests.length;  i++ ) { %>
                <tr>
                    <td><%= requests[i].student.name %></td>
                <td><%= requests[i].student.username %></td>
                <td><%= requests[i].room %></td>
                <td><%= requests[i].date %></td>
                <td><%= requests[i].start %> - <%= requests[i].end %></td>
                <td><%= requests[i].purpose %></td>
                <td>
                    
                    <div>
                        <form action="/approve_request/<%= requests[i]._id %>" method="GET">
                            <button class="button approve" type="submit">Approve</button>
                        </form>
                        
                        <form action="/reject_request/<%= requests[i]._id %>" method="GET">
                            <button class="button reject" type="submit">Reject</button>
                        </form>
                    </div>
                
                </td>
                </tr>
                <% } %>
                
            
        </tbody>
    </table>

    <!-- Added requests history below  -->

    <div class="title">
        Request History
    </div>

    <table border="0" cellspacing="0" cellpadding="0">

        <thead>
            <th>Name</th>
            <th>Email</th>
            <th>Room</th>
            <th>Date</th>
            <th>Timings</th>
            <th>Purpose</th>
            <th>Actions</th>
        </thead>

        <tbody>
            <% for (var i =0; i < approvedRequests.length;  i++ ) { %>
                <tr>
                    <td><%= approvedRequests[i].student.name %></td>
                <td><%= approvedRequests[i].student.username %></td>
                <td><%= approvedRequests[i].room %></td>
                <td><%= approvedRequests[i].date %></td>
                <td><%= approvedRequests[i].start %> - <%= approvedRequests[i].end %></td>
                <td><%= approvedRequests[i].purpose %></td>
                <td><%= approvedRequests[i].status %></td>
                </tr>
                <% } %>   
        </tbody>
        </tbody>
    </table>
    </main>
    
    
</body>
</html>
